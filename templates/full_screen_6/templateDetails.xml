				<field name="min_height_menu" type="text" default="500" size="10" label="Minimum height to display your left column in px" description="If the height of the screen is less of this value (in pixels), the left column will not be fixed. Default : 400" />
				

			<field name="Header03" type="header" default="Content box" label="" description="" />
				
				<field name="position_content_box" type="list" default="top" label="Position of the content box" description="">
					<option value="top">Top right corner</option>
					<option value="bottom">Bottom rigth corner</option>
					<option value="full_width">Full width</option>
				</field>					
					
				<field name="width_content" type="text" default="350px" size="10" label="Width of content box in px or %" description="Enter the width of content box in px or %. Maximum value is 90% . Default : 350px" />

