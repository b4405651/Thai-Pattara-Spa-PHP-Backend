					<option value="red">Red</option>
					<option value="blue">Blue</option>
					<option value="blue-jean">Blue jean</option>
					<option value="green">Green</option>
					<option value="green-light">Green light</option>
					<option value="black">Black</option>
				</field>
				

			<field name="Header02" type="header" default="Left column" label="" description="" />

				<field name="width_menu" type="text" default="280" size="10" label="Width of left column with menu in px" description="Enter the width of your left column in px . Default : 280" />
							
				<field name="website_title" type="text" default="" size="20" label="Website title" description="" />
				
				<field name="color_theme_menu" type="list" default="white" label="Color theme of left column" description="">
					<option value="white">White</option>
					<option value="black">Black</option>
				</field>				
				
				<field name="transparency_menu" type="list" default="2" label="Transparency of left column" description="">
					<option value="0">No transparency</option>
					<option value="1">Transparency +</option>
					<option value="2">Transparency ++</option>
					<option value="3">Transparency +++</option>
					<option value="4">Transparency 4+</option>
